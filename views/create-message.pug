extends layout

block content
  h1= title
  if user
    if user.isPro
      form(method='POST' action='')
        div.form-group
          label(for='title') Message title:
          input#title.form-control(type='text' name='title')
          label(for='text') Message content:
          input#text.form-control(type='text' name='text')
          button.btn.btn-primary(type='submit') Send message
    else 
      h4 Oopsie! You're not permitted to send messages :) Become pro first.
  else 
    h4 Oopsie! You're not logged in :)
